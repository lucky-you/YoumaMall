<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="136dp"
    android:background="@color/white"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/tvGoodCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="20201117298790"
        android:textColor="@color/color_333"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivLeftImage"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_def_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGoodCardNumber" />

    <TextView
        android:id="@+id/tvRightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:gravity="center_vertical"
        android:text="百宝箱年卡"
        android:textColor="@color/color_333"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/tvPrice"
        app:layout_constraintLeft_toRightOf="@id/ivLeftImage"
        app:layout_constraintTop_toTopOf="@id/ivLeftImage" />

    <TextView
        android:id="@+id/tvOffShelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="x1"
        android:textColor="@color/color_999"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvRightValue"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="¥95.00"
        android:textColor="@color/color_666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/ivLeftImage"
        app:layout_constraintLeft_toLeftOf="@id/tvRightValue"
        app:layout_constraintTop_toBottomOf="@id/tvRightValue" />


</androidx.constraintlayout.widget.ConstraintLayout>

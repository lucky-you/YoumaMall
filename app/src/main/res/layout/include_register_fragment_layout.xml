<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_top_radius_bg"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.6dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/RelativeLayoutWidth44DpStyle"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_phone" />

                    <EditText
                        android:id="@+id/editMobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:background="@null"
                        android:hint="请输入手机号码"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:paddingLeft="16dp"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    style="@style/DivideLineStyle"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" />

                <LinearLayout
                    style="@style/RelativeLayoutWidth44DpStyle"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_password" />

                    <EditText
                        android:id="@+id/editPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:background="@null"
                        android:hint="请输入您的密码"
                        android:inputType="textPassword"
                        android:paddingLeft="16dp"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="14sp" />


                </LinearLayout>

                <View
                    style="@style/DivideLineStyle"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" />

                <LinearLayout
                    style="@style/RelativeLayoutWidth44DpStyle"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_password" />

                    <EditText
                        android:id="@+id/editPasswordAgain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:background="@null"
                        android:hint="请确认您的密码"
                        android:inputType="textPassword"
                        android:paddingLeft="16dp"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="14sp" />


                </LinearLayout>

                <View
                    style="@style/DivideLineStyle"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" />

                <LinearLayout
                    style="@style/RelativeLayoutWidth44DpStyle"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_verification_code" />

                    <EditText
                        android:id="@+id/editVerificationCode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入短信验证码"
                        android:inputType="number"
                        android:paddingLeft="16dp"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvGetVerificationCode"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_theme_color_15dp_bg"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="@color/color_333"
                        android:textSize="14sp" />


                </LinearLayout>

                <View
                    style="@style/DivideLineStyle"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" />

                <LinearLayout
                    style="@style/RelativeLayoutWidth44DpStyle"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_invitation_code" />

                    <EditText
                        android:id="@+id/editInvitationCode"
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:background="@null"
                        android:hint="请输入邀请码"
                        android:paddingLeft="16dp"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="14sp" />


                </LinearLayout>

                <View
                    style="@style/DivideLineStyle"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" />


                <TextView
                    android:id="@+id/tvRegister"
                    style="@style/BottomTextViewStyle"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shape_theme_color_22dp_bg"
                    android:text="注册"
                    android:textColor="@color/color_333"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLogin"
                    style="@style/BottomTextViewStyle"
                    android:layout_width="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:text="登录"
                    android:textColor="@color/color_333" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


</layout>

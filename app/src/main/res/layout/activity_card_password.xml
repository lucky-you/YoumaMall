<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f6f6f6"
        android:orientation="vertical">

        <com.zhowin.base_library.view.TitleView
            android:id="@+id/tvTitleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mBackgroundColor="@color/color_FFDE00"
            app:mTitle="卡密" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="卡密"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="8.5"
                android:background="@null"
                android:gravity="left"
                android:hint="请输入卡密,一行一个"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/color_333"
                android:textColorHint="@color/color_999"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvCardPasswordLogin"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_theme_color_22dp_bg"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/color_333"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</layout>
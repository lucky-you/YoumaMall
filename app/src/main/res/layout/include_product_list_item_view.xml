<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clItemRootLayout"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/ivLeftImage"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_def_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:gravity="center_vertical"
        android:text="百宝箱年卡"
        android:textColor="@color/color_333"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/tvXGNRText"
        app:layout_constraintLeft_toRightOf="@id/ivLeftImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOffShelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="下架"
        android:textColor="@color/color_E83219"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvRightValue"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tvXGNRText"
        android:layout_width="76dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_theme_color_4dp_bg"
        android:gravity="center"
        android:text="修改内容"
        android:textColor="@color/color_333"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tvRightValue"
        app:layout_constraintTop_toBottomOf="@id/tvRightValue" />

    <TextView
        android:id="@+id/tvLRKMText"
        android:layout_width="76dp"
        android:layout_height="30dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/shape_stroke_theme_4dp_bg"
        android:gravity="center"
        android:text="录入卡密"
        android:textColor="@color/color_333"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvXGNRText"
        app:layout_constraintLeft_toRightOf="@id/tvXGNRText" />


</androidx.constraintlayout.widget.ConstraintLayout>

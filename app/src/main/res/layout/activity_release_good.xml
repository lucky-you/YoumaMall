<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f6f6f6"
        android:orientation="vertical">

        <com.zhowin.base_library.view.TitleView
            android:id="@+id/tvTitleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mBackgroundColor="@color/color_FFDE00"
            app:mTitle="发布商品" />

        <com.zhowin.base_library.view.NoNestedScrollview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:divider="@drawable/shape_divide_line_bg"
                app:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:text="分类"
                        android:textColor="@color/color_333"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8.5"
                        android:drawableRight="@mipmap/ic_arrow_right"
                        android:gravity="center_vertical"
                        android:text="请选择分类"
                        android:textColor="@color/color_999"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:text="名称"
                        android:textColor="@color/color_333"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8.5"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入商品名称"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:text="名称"
                        android:textColor="@color/color_333"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/goodRecyclerView"
                        style="@style/RecycleViewStyle"
                        android:layout_width="0dp"
                        android:layout_weight="8.5" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:text="单价"
                        android:textColor="@color/color_333"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8.5"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="商品价格系统自动x2"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:text="状态"
                        android:textColor="@color/color_333"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8.5"
                        android:drawableRight="@mipmap/ic_arrow_right"
                        android:gravity="center_vertical"
                        android:text="请选择商品状态"
                        android:textColor="@color/color_999"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:text="联系"
                        android:textColor="@color/color_333"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8.5"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入QQ联系方式"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:text="详情"
                        android:textColor="@color/color_333"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="8.5"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="请输入商品详情"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvRelease"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/shape_theme_color_22dp_bg"
                    android:gravity="center"
                    android:text="发布"
                    android:textColor="@color/color_333"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.LinearLayoutCompat>


        </com.zhowin.base_library.view.NoNestedScrollview>
    </LinearLayout>

</layout>